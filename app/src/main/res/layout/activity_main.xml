<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_nav"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="@color/yellow"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/me"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papa Ibrahima NDIAYE"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apprenant à Simplon Sénégal"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="Hello!"
            android:textSize="36dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="@string/deccrition"
            android:textColor="@color/white"/>
        <!--About me section-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="À PROPOS DE MOI"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom:"
                android:padding="@dimen/padding"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papa Ibrahima NDIAYE"
                android:padding="@dimen/padding"
                android:textColor="@color/yellow"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:padding="@dimen/padding"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:padding="@dimen/padding"
                android:textColor="@color/yellow"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Langues:"
                android:padding="@dimen/padding"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Français, Anglais, Wolof"
                android:padding="@dimen/padding"
                android:textColor="@color/yellow"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="@dimen/padding"
            android:text="@string/description_about"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download my CV"
            android:backgroundTint="@color/btn_default"
            android:layout_gravity="center"/>
        <!--Cursus section-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cursus"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <!--Cursus 1 -->
        <RelativeLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/grade_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/yellow"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/grade"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-2022"
                android:id="@+id/annee_1"
                android:layout_toRightOf="@id/grade_1"
                android:backgroundTint="@color/btn_default"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_below="@id/grade_1"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/annee_1"
                android:textColor="@color/white"
                android:text="@string/cursus_1"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
        <!--Cursus 2 -->
        <RelativeLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/grade_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/yellow"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/grade"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020"
                android:id="@+id/annee_2"
                android:layout_toRightOf="@id/grade_2"
                android:backgroundTint="@color/btn_default"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_below="@id/grade_2"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/annee_2"
                android:textColor="@color/white"
                android:text="@string/cursus_2"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
        <!--Cursus 3 -->
        <RelativeLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/grade_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/yellow"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/grade"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-2019"
                android:id="@+id/annee_3"
                android:layout_toRightOf="@id/grade_3"
                android:backgroundTint="@color/btn_default"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_below="@id/grade_3"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/annee_3"
                android:textColor="@color/white"
                android:text="@string/cursus_3"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
    <!--section Experience -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON EXPÉRIENCE"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <!--Experience 1 -->
        <RelativeLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/grade_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/yellow"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/grade"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep 2020-Janv 2021"
                android:id="@+id/annee_4"
                android:layout_toRightOf="@id/grade_4"
                android:backgroundTint="@color/btn_default"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_below="@id/grade_4"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/annee_4"
                android:textColor="@color/white"
                android:text="@string/experience_1"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
        <!--Experience 2 -->
        <RelativeLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/grade_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/yellow"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/grade"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep 2020-Janv 2021"
                android:id="@+id/annee_5"
                android:layout_toRightOf="@id/grade_5"
                android:backgroundTint="@color/btn_default"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_below="@id/grade_5"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/annee_5"
                android:textColor="@color/white"
                android:text="@string/experience_2"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>